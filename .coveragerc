[run]
# Medimos el paquete completo, pero excluimos CLI y Pygame del c√≥mputo.
branch = True
source =
    backgammon
omit =
    backgammon/cli/*
    backgammon/pygame/*
    */__init__.py

[report]
show_missing = True
skip_empty = True
exclude_lines =
    pragma: no cover
    if __name__ == "__main__":
    ^\s*unittest\.main\(\)
    ^\s*pass$
    ^\s*raise\s+NotImplementedError


